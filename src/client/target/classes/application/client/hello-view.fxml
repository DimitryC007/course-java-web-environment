<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="270.0" prefWidth="401.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.client.StoreManagementApplicationController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label fx:id="welcomeText" text="Welcome to store management" />
   <GridPane prefHeight="65.0" prefWidth="258.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="199.0" minWidth="10.0" prefWidth="99.0" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="283.0" minWidth="10.0" prefWidth="263.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Label prefHeight="18.0" prefWidth="179.0" text="Username:" />
         <TextField fx:id="usernameField" prefHeight="26.0" prefWidth="271.0" GridPane.columnIndex="1" />
         <Label text="Password:" GridPane.rowIndex="1" />
         <TextField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      </children>
   </GridPane>
   <Label fx:id="loginStatusLabel" />
  <Button onAction="#onLoginButtonClick" text="Login" />
</VBox>
